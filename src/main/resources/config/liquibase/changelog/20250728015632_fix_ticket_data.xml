<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20250728015632-1" author="jhipster">
        <!-- Clear existing incorrect data -->
        <delete tableName="ticket_category">
            <where>1=1</where>
        </delete>
        <delete tableName="ticket_priority">
            <where>1=1</where>
        </delete>
    </changeSet>

    <changeSet id="20250728015632-2" author="jhipster">
        <!-- Load correct ticket categories -->
        <insert tableName="ticket_category">
            <column name="id" value="1"/>
            <column name="name" value="BUG"/>
        </insert>
        <insert tableName="ticket_category">
            <column name="id" value="2"/>
            <column name="name" value="FEATURE_REQUEST"/>
        </insert>
        <insert tableName="ticket_category">
            <column name="id" value="3"/>
            <column name="name" value="QUESTION"/>
        </insert>
        <insert tableName="ticket_category">
            <column name="id" value="4"/>
            <column name="name" value="OTHER"/>
        </insert>
    </changeSet>

    <changeSet id="20250728015632-3" author="jhipster">
        <!-- Load correct ticket priorities -->
        <insert tableName="ticket_priority">
            <column name="id" value="1"/>
            <column name="name" value="LOW"/>
        </insert>
        <insert tableName="ticket_priority">
            <column name="id" value="2"/>
            <column name="name" value="MEDIUM"/>
        </insert>
        <insert tableName="ticket_priority">
            <column name="id" value="3"/>
            <column name="name" value="HIGH"/>
        </insert>
        <insert tableName="ticket_priority">
            <column name="id" value="4"/>
            <column name="name" value="CRITICAL"/>
        </insert>
    </changeSet>
</databaseChangeLog>
